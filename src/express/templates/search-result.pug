extends layout.pug

block content
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска
      .search-results__wrapper
        if searchList.length
          p.search-results__label
            | Найдено
            span.js-results=countSearch
              |  публикации
          ul.search-results__list
            each ticket in searchList
              li.search-results__item
                .ticket-card(class=`ticket-card--color` + ticket.id)
                  .ticket-card__img
                    img(src=ticket.img.small, srcset=ticket.img.big, alt='Изображение товара')
                  .ticket-card__info
                    span.ticket-card__label=ticket.label
                    .ticket-card__categories
                      each category in ticket.categories
                        a(href='/offers/category/1')=category
                    .ticket-card__header
                      h3.ticket-card__title
                        a(href='/offers/1')=ticket.title
                      p.ticket-card__price
                        span.js-sum=ticket.price
                        |  ₽
                    .ticket-card__desc
                      p=ticket.description
        else
          .search-results__message
            p
              | Не найдено
              br
              | ни&nbsp;одной публикации
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title Самое свежее
          a.tickets-list__link(href='#') Еще 25
        ul
          each ticket in ticketList
            li.tickets-list__item
              .ticket-card(class=`ticket-card--color` + ticket.id)
                .ticket-card__img
                  img(src=ticket.img.small, srcset=ticket.img.big, alt='Изображение товара')
                .ticket-card__info
                  span.ticket-card__label=ticket.label
                  .ticket-card__categories
                    each category in ticket.categories
                      a(href='/offers/category/1')=category
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href='/offers/1')=ticket.title
                    p.ticket-card__price
                      span.js-sum=ticket.price
                      |  ₽
                  .ticket-card__desc
                    p=ticket.description
