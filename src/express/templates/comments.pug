extends layout.pug

block content
  main.page-content
      section.comments
        .comments__wrapper
          if tickets.length
            h1.visually-hidden Страница комментариев
            each ticket in tickets
              .comments__block
                .comments__header
                  a.announce-card(href='#')
                    h2.announce-card__title=ticket.name
                    span.announce-card__info
                      span.announce-card__price=ticket.price
                      span.announce-card__type=ticket.type
                ul.comments-list
                  each comment in ticket.comments
                    li.js-card
                      .comment-card
                        .comment-card__header
                          a.comment-card__avatar.avatar(href='#')
                            img(src=comment.avatar.small, srcset=comment.avatar.big, alt='Аватар пользователя')
                          p.comment-card__author=comment.author
                        .comment-card__content
                          p=comment.text
                        button.comment-card__delete.js-delete(type='button') Удалить
          else
            p.comments__message У ваших публикаций еще нет комментариев.

